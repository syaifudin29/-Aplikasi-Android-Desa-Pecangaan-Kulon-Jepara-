<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Hallo warga desa"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Apa yang kamu butuhkan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btnlogin"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileBar23"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:src="@drawable/user"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0.5dp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/garis"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/profil"
                android:paddingTop="10dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnAnggaran"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:src="@drawable/anggaran"
                android:foreground="?selectableItemBackground"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnPenduduk"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/penduduk"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/btnSampah"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/banksampah"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"/>

        </TableRow>

        <TableRow >

            <ImageView
                android:id="@+id/btnBantuan"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/bantuan"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/btnLembaga"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/lembaga"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/btnKelompok"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/kelompok"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/btnBerita"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/berita"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="10dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Berita Terbaru"
        android:textColor="@color/hitam"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
    <ImageView
        android:id="@+id/grs2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/garis"
        app:layout_constraintStart_toStartOf="@+id/berita"
        app:layout_constraintTop_toBottomOf="@+id/berita" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBerita"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        app:layout_constraintStart_toStartOf="@+id/berita"
        app:layout_constraintTop_toBottomOf="@+id/grs2" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:progressBackgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berita"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/red"/>
</androidx.constraintlayout.widget.ConstraintLayout>